{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true, 
    "noErrorTruncation": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/tests/**/*"]
}
